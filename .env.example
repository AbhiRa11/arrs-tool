# API Keys (Optional - leave empty to use Ollama instead)
ANTHROPIC_API_KEY=

# LLM Provider Settings
# Options: "ollama" (local, free) or "claude" (requires API key)
LLM_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Database
DATABASE_URL=sqlite:///data/database.db
JSON_STORAGE_PATH=./data/analyses

# Crawler Settings
CRAWLER_TIMEOUT=30
CRAWLER_USER_AGENT=ARRS-Bot/1.0
PLAYWRIGHT_HEADLESS=true

# Rate Limiting
CLAUDE_RPM_LIMIT=50
CRAWLER_DELAY_MS=1000

# Scoring Weights
WEIGHT_ADE=0.30
WEIGHT_ARCE=0.20
WEIGHT_TRE=0.20

# Feature Flags
ENABLE_PLAYWRIGHT=true
ENABLE_CACHING=true
DEBUG_MODE=false
